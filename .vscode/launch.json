    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug.out",
            "args": ["-C", 
                    "68000", 
                    "-e", 
                    "-w", 
                    "-b", 
                    "0", 
                    "-l", 
                    "out/test/v1.0/rom.lst", 
                    "-o", 
                    "rom/rom.bin", 
                    "--",
                    "/home/rene/Git/68kTutorials/06-StringConversions/main.68k"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "debugbuild"
        }
    ]
}