{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc -O2 -o ${workspaceFolder}/bin/asmx ${workspaceFolder}/src/*.c",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debugbuild",
            "type": "shell",
            "command": "gcc -ggdb -O2 -o ${workspaceFolder}/bin/debug.out ${workspaceFolder}/src/*.c",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ]
}